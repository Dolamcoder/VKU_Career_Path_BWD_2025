                                <td id="program2-salary" class="text-center"></td>
                            </tr>
                            <tr>
                                <td class="font-medium">Kỹ năng yêu cầu</td>
                                <td id="program1-skills" class="text-center"></td>
                                <td id="program2-skills" class="text-center"></td>
                            </tr>
