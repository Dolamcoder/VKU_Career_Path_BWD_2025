                                <td class="font-medium">Thời gian đào tạo</td>
                                <td id="program1-duration" class="text-center"></td>
                                <td id="program2-duration" class="text-center"></td>
                            </tr>
                            <tr>
                                <td class="font-medium">Thế mạnh tại VKU</td>
                                <td id="program1-strengths" class="text-center"></td>
                                <td id="program2-strengths" class="text-center"></td>
