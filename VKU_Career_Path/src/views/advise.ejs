                        </div>
                        <div class="w-full max-w-xs">
                            <div class="progress-bar">
                                <div id="progress-fill" class="progress-fill" style="width: 10%"></div>
                            </div>
                        </div>
                    </div>

                    <div id="question-container">
                        <!-- hiện thị câu hỏi = js ở đây á hỉ chớ k phải k có code mô -->
                    </div>

                    <div class="flex justify-between mt-8">
                        <button id="prev-btn"
                            class="text-blue-600 hover:text-blue-800 font-medium flex items-center opacity-0">
                            <i class="fas fa-arrow-left mr-2"></i> Câu trước
                        </button>
                        <button id="next-btn"
                            class="bg-blue-600 text-white px-6 py-2 rounded-md font-medium hover:bg-blue-700 transition">
                            Tiếp theo <i class="fas fa-arrow-right ml-2"></i>
                        </button>
                    </div>
                </div>

                <!-- kq bài test -->
                <div id="test-results" class="test-results hidden">
